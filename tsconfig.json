{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["cypress", "newman"]
  },
  "include": ["src/ui", "src/api"],
  "exclude": ["cypress.config.ts", "cypress", "node_modules"]
}
